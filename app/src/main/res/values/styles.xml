<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="customButton">
        <item name="android:background">@drawable/custom_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/cairo_bold</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="placeOrderButton" parent="customButton">
        <item name="android:background">@drawable/place_order_button_style</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="cancelButton" parent="placeOrderButton">
        <item name="android:background">@drawable/cancel_button_style</item>
    </style>

    <style name="customTextView">
        <item name="android:fontFamily">@font/cairo_bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/TextPadding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="customEditText">
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/custom_edit_text_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColorHint">@color/light_gary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/cairo_medium</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>

    </style>

    <style name="customSmallEditText">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:background">@drawable/custom_widget_background</item>
        <item name="android:elevation">3dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/secondary_black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="customImageButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/custom_widget_background</item>
        <item name="android:elevation">3dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="customSmallImageButton">
        <item name="android:background">@drawable/custom_icon_circular_background</item>
        <item name="android:padding">@dimen/MedPadding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="rectoFood" parent="customSmallImageButton">
        <item name="android:background">@drawable/custom_pencil_background</item>
    </style>

    <style name="customCheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/cairo_semi_bold</item>
        <item name="android:text">Remember me</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="backButton">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/custom_button_back</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
    </style>

    <style name="customRatingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:numStars">5</item>
        <item name="android:progressTint">@color/primary</item>
        <item name="android:rating">4</item>
    </style>

    <style name="buyNowButton" parent="customButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/buy_now_button_style</item>
        <item name="android:textColor">@color/back_ground</item>
        <item name="android:paddingStart">35dp</item>
        <item name="android:paddingEnd">35dp</item>
    </style>
</resources>