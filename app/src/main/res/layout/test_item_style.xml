<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/custom_edit_text_background"
    android:elevation="3dp"
    android:orientation="horizontal"
    android:padding="@dimen/MedPadding">

    <androidx.cardview.widget.CardView
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sayed_mostafa" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/customTextView"
            android:fontFamily="@font/cairo_bold"
            android:padding="0dp"
            android:textSize="14sp"
            android:text="Sayed Mostafa"
            android:textColor="#000" />

        <TextView
            style="@style/customTextView"
            android:padding="0dp"
            android:text="February 19,2024"
            android:textSize="8sp"
            tools:ignore="SmallSp" />

        <TextView
            style="@style/customTextView"
            android:padding="0dp"
            android:text="perfect !"
            android:textColor="@color/secondary_black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            style="@style/customSmallImageButton"
            android:layout_gravity="center"
            android:background="@drawable/custom_pencil_background"
            android:elevation="2dp"
            android:padding="8dp"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_half_star" />
    </LinearLayout>
</LinearLayout>