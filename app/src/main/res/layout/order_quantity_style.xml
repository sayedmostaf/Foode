<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_edit_text_background"
    android:orientation="horizontal"
    android:elevation="3dp"
    android:layout_margin="5dp"
    android:padding="@dimen/MedPadding"
    >

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:src="@drawable/img_falafel" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/customTextView"
            android:fontFamily="@font/cairo_bold"
            android:padding="0dp"
            android:text="Falafel"
            android:textColor="#000" />

        <TextView
            style="@style/customTextView"
            android:padding="0dp"
            android:text="Recto food" />

        <TextView
            style="@style/customTextView"
            android:padding="0dp"
            android:text="$10"
            android:textColor="@color/primary"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageButton
            style="@style/customSmallImageButton"
            android:background="@drawable/custom_button_back"
            android:elevation="2dp"
            android:padding="5dp"
            android:src="@drawable/ic_minus" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/cairo_bold"
            android:padding="@dimen/TextPadding"
            android:text="1"
            android:textAlignment="center"
            android:textSize="18sp" />

        <ImageButton
            style="@style/customSmallImageButton"
            android:background="@drawable/custom_pencil_background"
            android:elevation="2dp"
            android:padding="5dp"
            android:src="@drawable/ic_plus" />
    </LinearLayout>
</LinearLayout>