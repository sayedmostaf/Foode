<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground"
    android:padding="@dimen/PaddingScreen"
    tools:context=".PopularMenuActivity">

    <LinearLayout
        android:id="@+id/popular_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton style="@style/backButton" />

        <TextView
            style="@style/customTextView"
            android:text="Popular Menu"
            android:textColor="@color/secondary_black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popular_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@color/back_ground"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/popular_top_layout">
        <include layout="@layout/search_bar_style" />

        <androidx.appcompat.widget.AppCompatImageButton
            style="@style/customSmallImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/custom_button_back"
            android:padding="@dimen/TextPadding"
            android:src="@drawable/ic_filter" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first_popular_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/popular_search_bar">
        <include layout="@layout/popular_menu_style" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_popular_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/first_popular_item">
        <include layout="@layout/popular_menu_style" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_popular_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/second_popular_item">
        <include layout="@layout/popular_menu_style" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourth_popular_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/third_popular_item">
        <include layout="@layout/popular_menu_style" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifth_popular_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/fourth_popular_item">

        <include layout="@layout/popular_menu_style" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>