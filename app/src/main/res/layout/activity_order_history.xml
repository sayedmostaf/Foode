<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground"
    android:padding="@dimen/PaddingScreen"
    tools:context=".OrderHistoryActivity">

    <LinearLayout
        android:id="@+id/order_history_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            style="@style/backButton"

            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <TextView
            style="@style/customTextView"
            android:text="Chat"
            android:textColor="@color/secondary_black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_history_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@color/back_ground"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/order_history_top_layout">

        <include layout="@layout/search_bar_style" />

        <androidx.appcompat.widget.AppCompatImageButton
            style="@style/customSmallImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/custom_button_back"
            android:padding="@dimen/TextPadding"
            android:src="@drawable/ic_filter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/order_history_search_bar">

        <include layout="@layout/order_history_style" />

        <include layout="@layout/order_history_style" />

        <include layout="@layout/order_history_style" />

        <include layout="@layout/order_history_style" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>